img {
  position: absolute;
  border: 5px double black;
  left: 90%;
  top: 10%;
  z-index: -1;
}


page1 {
  margin-right: 10%;
  margin-bottom: 10%;
  margin-top: 10%;
  margin-left: 10%;
}

h1,
h2,
h3,
h4,
h5 {
  font-family: Arial, sans-serif;
}

h1 {
  color: #FFF;
  background-color: rgb(138, 68, 68);
  text-align: center;
}

h2 {
  background-color: rgb(138, 68, 68);
  color: #FFF;
  text-align: center;
}

h3 {
  color: black;
}

h4 {
  color: black;
}

h5 {
  color: black;
  text-align: center;
  text-size-adjust: small;
}

.align_gauche {
  text-align: left;
}

* {
  box-sizing: border-box;
}

/* Créer 3 colonnes pour l'expérience prof*/
.column {
  float: left;
  padding: 10px;
}

.left {
  width: 30%;
  background-color: transparent;
  text-align: center;
}

.center {
  width: 30%;
  background-color: transparent;
  text-align: center;
}

.right {
  width: 40%;
  background-color: transparent;
  text-align: left;
}

/* Créer 2 colonnes pour les formations*/
.left_forma {
  width: 30%;
  background-color: transparent;
  text-align: center;
}}

.right_forma {
  width: 70%;
  background-color: transparent;
  text-align: center;
}


/* Créer 4 colonnes pour les langues*/
.left_left_lang {
  width: 25%;
  background-color: transparent;
  text-align: center;
}

.left_right_lang {
  width: 25%;
  background-color: transparent;
  text-align: center;
}

.right_left_lang {
  width: 25%;
  background-color: transparent;
  text-align: center;
}

.right_right_lang {
  width: 25%;
  background-color: transparent;
  text-align: center;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}